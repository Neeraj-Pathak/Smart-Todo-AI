{
  "compilerOptions": {
    /* === Path alias so "@/lib/api" works === */
    "baseUrl": ".",
    "paths": {
      "@/*": ["./*"]
    },

    /* === Core compiler flags === */
    "target": "ES2017",
    "lib": ["dom", "dom.iterable", "esnext"],

    /* üîí Turn strictness and casing ON */
    "strict": true,                          // ‚Üê enable full type‚Äësafety
    "forceConsistentCasingInFileNames": true,// ‚Üê avoid case‚Äëmix issues on Mac/Linux

    /* === Typical Next.js settings === */
    "allowJs": true,
    "skipLibCheck": true,
    "noEmit": true,
    "incremental": true,
    "module": "esnext",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",

    /* Next.js TS plugin */
    "plugins": [{ "name": "next" }]
  },

  "include": [
    "next-env.d.ts",
    ".next/types/**/*.ts",
    "**/*.ts",
    "**/*.tsx"
  ],
  "exclude": ["node_modules"]
}
